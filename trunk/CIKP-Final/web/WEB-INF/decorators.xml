<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/WEB-INF/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/nodecorate/*</pattern>
        <pattern>/styles/*</pattern>
        <pattern>/scripts/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/dojo/*</pattern>
        <pattern>/struts/*</pattern>
    </excludes>

    <decorator name="master-nomenu" page="master-nomenu.jsp" defaultdir="/decorators">
        <pattern>/login/*</pattern>
        <pattern>/register/*</pattern>
    </decorator>

    <decorator name="master" page="master.jsp" defaultdir="/decorators">
        <pattern>/*</pattern>
    </decorator>

</decorators>
